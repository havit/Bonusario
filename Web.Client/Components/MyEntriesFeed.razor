<div class="row mb-4">
		@if (remainingPoints > 0)
		{
			<h2>Přidej odměnu</h2>
			<div class="col-lg-8">
				<EntryCard Entry="newEntry" OnEntryCreated="HandleEntryCreated" @ref="entryCard" SettingDefaultEntryVisibilityEnabled="true" />
			</div>
		}

		@if (remainingPoints is not null)
		{
			<div class="col-lg-4 d-flex align-items-stretch ms-auto">
				<RemainingPoints Points="remainingPoints.Value"/>
			</div>
		}
</div>

@if (entries is not null)
{
	<div class="row">
			<HxRepeater Data="entries" Context="entry">
				<ItemTemplate>
					<div class="col-lg-12 mb-4">
						@if (editedEntryId.HasValue && editedEntryId.Value == entry.Id)
						{
							<EntryCard Entry="entry"
								RecipientLocked="true"
								OnEntryDeleted="HandleEntryDeleted"
								OnEntryUpdated="HandleEntryUpdated" />
						}
						else
						{
							<ReadonlyEntryCard Entry="entry" OnClick="() => editedEntryId = entry.Id" />
						}
					</div>
				</ItemTemplate>
			</HxRepeater>
	</div>
}
else
{
	@* TODO Placeholders *@
}
